<div class="container search-bar">

  <!-- search bar -->
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="請輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="container mt-5">
    <div class="row">
      {{#each restaurants}}
      <div class="col-4">
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card px-1">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <h6 class="card-title mb-1">{{this.name_en}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
        <div class="d-flex justify-content-end mt-1 mb-5">
          <a href=""><button type="button" class="btn btn-link px-2 py-0">Edit</button></a>
          <a href=""><button type="button" class="btn btn-link px-2 py-0">Detail</button></a>
          <a href=""><button type="button" class="btn btn-outline-danger px-2 py-0">Delete</button></a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>